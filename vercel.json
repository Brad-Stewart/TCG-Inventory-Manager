{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "DATABASE_PATH": "/tmp/inventory.db"
  },
  "functions": {
    "api/index.py": {
      "includeFiles": "**"
    }
  }
}